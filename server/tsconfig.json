{
  "compilerOptions": {
    "target": "es2020",                      // Use modern JavaScript features
    "module": "commonjs",                    // Node.js module system
    "moduleResolution": "node",              // Resolve Node.js modules
    "outDir": "./dist",                      // Output for compiled JavaScript
    "esModuleInterop": true,                 // Interop between CommonJS and ESModules
    "forceConsistentCasingInFileNames": true, // Enforce consistent file name casing
    "resolveJsonModule": true,
    "strict": true,                          // Strict type-checking
    "skipLibCheck": true                    // Skip checking of declaration files (can be removed for strict checks)
  }
}
